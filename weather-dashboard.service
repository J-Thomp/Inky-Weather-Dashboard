[Unit]
Description=Weather Dashboard for Inky Impression Display
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/Inky-Weather-Dashboard
ExecStart=/usr/bin/python3 /home/pi/Inky-Weather-Dashboard/weather_dashboard.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
